        <div aria-label="buttons" class="flex gap-x-4 self-end">
            <app-monireal-button-component title="Cancel"
                                           (click)="this.handleSendResponse(false)"></app-monireal-button-component>
            <app-monireal-button-component title="Confirm" buttonStyle="button-primary"
                                           (click)="this.handleSendResponse(true)"></app-monireal-button-component>
